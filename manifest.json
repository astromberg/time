{
  "name": "Timestamp Converter",
  "description": "This extension automatically converts timestamps into readable dates.",
  "version": "2.0",
  "manifest_version": 2,

  "permissions": [
    "activeTab",
	"contextMenus"
  ],

  "background": {
    "scripts": [ "background.js" ]
  },

  "icons": {
    "16": "icon.png"
  },

  "page_action": {
    "default_title": "Convert times!",
    "default_icon": "icon.png"
  },

  "content_scripts" : [
    {
      "matches" : [
        "http://*/*",
        "https://*/*",
        "file://*"
      ],
      "js" : ["contentscript.js"],
      "run_at" : "document_idle",
      "all_frames" : false
    }
  ]
}
